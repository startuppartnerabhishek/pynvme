{
    "global": {
        "agent_runtime_rootpath": "/sanity/build/nvme-test/run/",
        "nsv_test_root_path": "/sanity/build/nvme-test/",
        "log_register_reads": 0,
        "log_register_writes": 0,
        "log_buf_alloc_free": 1,
        "max_log_entries_per_qpair": 128,
        "log_dump_adminq_completion_bytes": 256,
        "temp_bufdump_file": "/tmp/pynvme_buf_dump.tmp"
    },

    "nvme0": {
        "dev_no": 0,
        "vf_no": 0,
        "sq_size": 64,
        "cq_size": 128,
        "nr_cmds": 16
    },

    "batch_config": {

        "test_initial_setup": {
            "command": "scripts/pensando/wrappers/configure_nvme_linux_target.sh",
            "args": []
        },

        "configs": [
            {
                "name": "batch config 0 (catch all)",

                "setup" : {
                    "command": "scripts/pensando/wrappers/start_agent_basic.sh",
                    "args": []
                },

                "cleanup": {
                    "command": "scripts/pensando/wrappers/stop_agent_basic.sh",
                    "args": []
                },

                "test_config": {
                    "objects": ["/sanity/build/nvme-test/tools/nvme_testcfg.json"],
                    "globals": ["/sanity/build/nvme-test/run/conf/apollo/nvme/nvme_config.json"]
                }
            },

            {
                "name": "batch config 1 (vanilla nsv_test_cfg)",

                "setup" : {
                    "command": "ls",
                    "args": ["-l", "-t", "-r"]
                },

                "cleanup": {
                    "command": "du",
                    "args": ["-H"]
                },

                "test_config": {
                    "objects": ["batch0_cfg.json"],
                    "globals": []
                }
            },

            {
                "name": "batch config 2 (kill and restart)",

                "setup" : {
                    "command": "kill_and_restart_agent.sh",
                    "args": []
                },

                "cleanup": {
                    "command": "delete_all_config.sh",
                    "args": []
                },

                "test_config": {
                    "objects": ["batch2_cfg.json"],
                    "globals": []
                }
            }
        ],

        "default_config": 0,

        "batches": {
            "batch0": 0,
            "batch1": 0,
            "batch2": 0
        },

        "test_final_cleanup": {
            "command": "scripts/pensando/wrappers/stop_agent_basic.sh",
            "args": []
        }
    }
}